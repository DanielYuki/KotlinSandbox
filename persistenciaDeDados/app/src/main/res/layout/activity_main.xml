<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Gravando Dados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="36sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/edtDado" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="72dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="72dp"/>
    <EditText
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtDado"
            android:textSize="24sp"
            android:hint="Digite Um Dado p/ Gravar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="43dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="43dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="RESGATAR DADO"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnResgatar"
            android:layout_marginTop="175dp"
            app:layout_constraintTop_toBottomOf="@+id/edtDado" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="130dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="131dp"/>
    <Button
            android:text="Gravar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGravar" app:layout_constraintEnd_toEndOf="@+id/edtDado"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/edtDado"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvResultado" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="144dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="144dp"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/btnResgatar"/>

</android.support.constraint.ConstraintLayout>