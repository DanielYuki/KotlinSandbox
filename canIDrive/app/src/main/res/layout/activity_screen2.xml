<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Screen2Activity">

    <TextView
            android:text="Welcome Mah Friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvName" android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Select Your Age:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/txvName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="150dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="150dp" android:textSize="18sp"/>
    <Spinner
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:id="@+id/spnAges" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVerify" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/spnAges" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txvResult" android:textStyle="bold"
            android:textSize="30sp" android:layout_marginTop="166dp" app:layout_constraintTop_toBottomOf="@+id/btnVerify"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="163dp"
            android:layout_marginBottom="218dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="162dp"/>
</android.support.constraint.ConstraintLayout>